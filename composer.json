{
    "name": "pxgamer/:package_name",
    "type": "library",
    "description": ":package_description",
    "license": "MIT",
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0 || ^7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "pxgamer\\:package_name\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "pxgamer\\:package_name\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true
    }
}
